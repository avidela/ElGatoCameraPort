{
  "executable": "ElgatoControl.Api",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "elgato-camera-control",
  "description": "Desktop camera control panel for Elgato Facecam on Linux",
  "author": "ElgatoCameraPort <noreply@elgatocameraport.io>",
  "singleInstance": true,
  "environment": "Production",
  "build": {
    "appId": "io.elgatocameraport.app",
    "productName": "Elgato Camera Control",
    "copyright": "Copyright Â© 2026",
    "buildVersion": "1.0.0",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility",
      "synopsis": "Camera control panel for Elgato Facecam",
      "executableName": "elgato-camera-control"
    },
    "deb": {
      "depends": [
        "ffmpeg",
        "v4l-utils"
      ],
      "maintainer": "ElgatoCameraPort <noreply@elgatocameraport.io>"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [
          "**/*"
        ]
      },
      "**/*"
    ]
  }
}